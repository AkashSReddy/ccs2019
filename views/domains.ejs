      function toggle() {
        if (f == 0) {
          text.style.color = "#333333";

          x.classList.remove("colour1");
          x.classList.add("colour3");
          var w = document.documentElement.clientWidth;
          if (w > 992) {
            for (var i = 0; i < 1; i++) {
              y[i].classList.remove("invisible");
              y[i].classList.add("visible");
            }
          } else if (w > 600 && w <= 992) {
            for (var i = 0; i < 2; i++) {
